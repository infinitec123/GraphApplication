<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WheelIndicatorView">
        <attr name="itemsLineWidth" format="dimension" />
        <attr name="circleWidth" format="dimension" />
        <attr name="filledPercent" format="integer" />
        <attr name="centreImage" format="integer" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="indicatorText" format="string" />
        <attr name="indicatorColor" format="color" />
        <attr name="indicatorTextColor" format="color" />
        <attr name="indicatorImage" format="integer" />
    </declare-styleable>

    <declare-styleable name="LineIndicatorView">
        <attr name="categoryText" format="string" />
        <attr name="categoryTotalText" format="string" />
        <attr name="categoryImage" format="integer" />
        <attr name="category1Percentage" format="float" />

        <attr name="leftCircleColor" format="color" />
        <attr name="category1Color" format="color" />
        <attr name="category2Color" format="color" />
        <attr name="category1Text" format="string" />
        <attr name="category2Text" format="string" />
    </declare-styleable>

    <declare-styleable name="CircleIndicatorView">
        <attr name="circleImage" format="integer" />

        <attr name="text1Color" format="color" />
        <attr name="text2Color" format="color" />
        <attr name="weight" format="float" />
        <attr name="text1" format="string" />
        <attr name="text2" format="string" />
    </declare-styleable>

    <declare-styleable name="FunnelChart">
        <attr name="required_width" format="dimension"/>
        <attr name="required_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SimpleWheelIndicatorView">
        <attr name="sw_itemsLineWidth" format="dimension" />
        <attr name="sw_circleWidth" format="dimension" />
        <attr name="sw_filledPercent" format="integer" />
        <attr name="sw_centreImage" format="integer" />
        <attr name="sw_centreColor" format="color" />
        <attr name="sw_centreText" format="string" />
        <attr name="sw_text1" format="string" />
        <attr name="sw_text2" format="string" />
        <attr name="sw_centreTextColor" format="color" />
        <attr name="sw_bottomTextColor" format="color" />
        <attr name="sw_backgroundColor" format="color" />
    </declare-styleable>
</resources>