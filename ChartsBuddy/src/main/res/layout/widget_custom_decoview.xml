<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_container"
    android:layout_width="150dp"
    android:layout_height="150dp">

    <com.hookedonplay.decoviewlib.DecoView
        android:id="@+id/id_decoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:gravity="center" />

    <View
        android:id="@+id/id_dummy_view"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/id_text_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/id_dummy_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="46%"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_text_statement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_dummy_view"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Individuals"
        android:textSize="18sp" />

</RelativeLayout>
